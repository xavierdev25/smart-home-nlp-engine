# ============================================
# Smart Home NLP Engine - Configuration
# Copy this file to .env and customize values
# ============================================

# Application
APP_NAME=NLP Service - Smart Home
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8001
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./nlp_smart_home.db
DEVICES_FILE=data/devices.json

# Ollama LLM (fallback when rules don't match)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3
OLLAMA_TIMEOUT=60

# IoT Backend URL (for /execute endpoint)
IOT_BACKEND_URL=http://localhost:3000

# ============================================
# OFFLINE MODE CONFIGURATION
# ============================================
# Set to True to work completely without internet
OFFLINE_MODE=False

# STT (Speech-to-Text) Engine
# Options: google (online), whisper (offline), vosk (offline)
STT_ENGINE=google

# Whisper model (only if STT_ENGINE=whisper)
# Options: tiny, base, small, medium, large
# Recommended: base (good balance) or small (better accuracy)
WHISPER_MODEL=base

# Vosk model path (only if STT_ENGINE=vosk)
# Download from: https://alphacephei.com/vosk/models
# VOSK_MODEL_PATH=models/vosk-model-small-es-0.42

# TTS (Text-to-Speech) Engine
# Options: gtts (online), edge_tts (online), pyttsx3 (offline), espeak (offline)
TTS_ENGINE=gtts

# Voice settings
VOICE_LANGUAGE=es-ES
TTS_VOICE=es-MX-DaliaNeural
